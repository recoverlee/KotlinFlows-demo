<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.scarlet">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Movies">
        <activity
            android:name=".flows.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="org.scarlet.android.currency.case1.CurrencyActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:exported="true"/>
        <activity android:name="org.scarlet.android.currency.case2.CurrencyActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:exported="true"/>
        <activity android:name="org.scarlet.android.password.livedata.PasswordActivity"
            android:theme="@style/Theme.StateFlow"
            android:exported="true"/>
        <activity android:name="org.scarlet.android.password.flow.PasswordActivity"
            android:theme="@style/Theme.StateFlow"
            android:exported="true"/>
        <activity android:name="org.scarlet.android.collect.SafeCollectActivity"
            android:theme="@style/Theme.StateFlow"
            android:exported="true"/>
    </application>

</manifest>